<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="390dp"
        android:layout_height="120dp"
        android:background="@color/white"
        android:layout_margin="12dp"
        app:cardCornerRadius="20dp"
        app:cardMaxElevation="6dp"
        card_view:contentPadding="4dp"
        >

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOrder"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            app:cardBackgroundColor="@color/purple_700"

            app:cardCornerRadius="20dp">
        <TextView
                android:id="@+id/nomCliente"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:text="Jorge Portilla"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        <TextView
                android:id="@+id/nomdireccion"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:text="Direccion: Jr.cupula"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        <TextView
            android:id="@+id/horaPEdi"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:text="11:30 pm"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
                android:id="@+id/EstadoPedi"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:text="Pedido en Espera"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/orange"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="34dp"
                android:text="Ver mas"
                android:textSize="13dp"/>
    </com.google.android.material.card.MaterialCardView>
</androidx.cardview.widget.CardView>