<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragment_Agregar_Direccion"
        >

    <!-- TODO: Update blank fragment layout -->
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:text="Agregar Direccion"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:textSize="30dp"
                    android:paddingStart="22dp"
                    android:paddingTop="10dp"
                    android:id="@+id/textView"
            />

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:hint="Direccion"
                    android:paddingStart="12dp"
                    android:background="#7D7F7D"
                    android:layout_margin="20dp"
                    android:id="@+id/inputDirection" />

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:hint="Ciudad"
                    android:paddingStart="12dp"
                    android:background="#7D7F7D"
                    android:layout_margin="20dp"
                    android:id="@+id/inputCity" />

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:hint="Numero"
                    android:paddingStart="12dp"
                    android:background="#7D7F7D"
                    android:layout_margin="20dp"
                    android:id="@+id/inputNumber" />

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:hint="Referencia"
                    android:paddingStart="12dp"
                    android:background="#7D7F7D"
                    android:layout_margin="20dp"
                    android:id="@+id/inputReference" />

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="textPersonName"
                    android:hint="Calle"
                    android:paddingStart="12dp"
                    android:ems="10"
                    android:background="#7D7F7D"
                    android:layout_margin="20dp"
                    android:id="@+id/inputStreet" />
            <!--
            <com.google.android.gms.maps.MapView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_margin="20dp"
                    android:id="@+id/mapView" /> -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Marcar tu direcciÃ³n"
                      android:textSize="15sp"
            />
            <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtLongitud"
                    map:cameraZoom="10"
                    map:uiRotateGestures="true"
                    map:uiZoomControls="true" />
            <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal">

                <Button
                        android:id="@+id/btnSaveAddress"
                        android:layout_width="250dp"
                        android:layout_height="70dp"
                        android:text="Guardar"
                />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</FrameLayout>