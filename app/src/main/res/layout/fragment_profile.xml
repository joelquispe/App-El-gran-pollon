<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ProfileFragment">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp">
        <TableRow
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"

                android:gravity="start">

           <ImageButton android:gravity="start" android:layout_gravity="start" android:textAlignment="textStart" android:layout_width="10dp" android:src="@drawable/ic_baseline_arrow_back_ios_24" android:id="@+id/btnBack" android:background="@color/black"/>

        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:text="Mi perfil"
                    android:textStyle="normal"
                    android:textSize="30dp"
                    android:textColor="@color/white"/>

        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:gravity="start">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Mis datos:"
                    android:textStyle="normal"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>
        </TableRow>

        <LinearLayout
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/abeezee"
                            android:textColor="@color/white"
                            android:text="Nombre :"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/abeezee"
                            android:textColor="@color/white"
                            android:text="Apellidos :"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/profileTxtName"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/abeezee"
                            android:textSize="14dp"
                            android:textColor="@color/white"
                            android:text="Joel Alexander"/>

                    <TextView
                            android:id="@+id/profileTxtLastname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/abeezee"
                            android:textSize="14dp"
                            android:textColor="@color/white"
                            android:text="Sosaya Quispe"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="55dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/abeezee"
                            android:textColor="@color/white"
                            android:gravity="center_vertical"
                            android:textSize="12dp"
                            android:text="TelÃ©fono :"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="75dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/profileTxtPhone"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/abeezee"
                            android:textColor="@color/white"
                            android:text="123 123 123"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="95dp"
                        android:orientation="horizontal">

                    <TextView

                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/abeezee"
                            android:textColor="@color/white"
                            android:gravity="center_vertical"
                            android:textSize="12dp"
                            android:text="Correo :"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="115dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/profileTxtEmail"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/abeezee"
                            android:textColor="@color/white"
                            android:text="joel@gmail.com"/>

                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="140dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/abeezee"
                            android:textColor="@color/white"
                            android:gravity="center_vertical"
                            android:textSize="12dp"
                            android:text="Fecha de nacimiento :"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="160dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/profileTxtDateOfBirth"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/abeezee"
                            android:textColor="@color/white"
                            android:text="2000-11-11"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:gravity="start">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Direcciones:"
                    android:textStyle="normal"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>

            <ImageButton
                    android:id="@+id/btnAddAddress"
                    android:layout_marginStart="200dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_baseline_add_circle_24"/>

        </TableRow>

        <Button
                android:id="@+id/addressBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:text="Ver direcciones"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textColor="@color/white"/>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:gravity="start">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Metodo de Pago :"
                    android:textStyle="normal"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>

            <ImageButton
                    android:layout_marginStart="200dp"
                    android:layout_width="30dp"
                    android:id="@+id/btnAddCard"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_baseline_add_circle_24"/>

        </TableRow>

        <Button
                android:id="@+id/methodPayBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:text="Ver metodos de pago"
                android:textStyle="normal"
                android:textSize="15dp"
                android:textColor="@color/white"/>

    </TableLayout>

</FrameLayout>